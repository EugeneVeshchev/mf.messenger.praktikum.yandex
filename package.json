{
  "name": "homer",
  "version": "0.0.1",
  "description": "Messenger",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "yarn local:static && yarn local:server && node server.js",
    "build:static": "parcel build --no-scope-hoist 'src/**/*.html' --dist-dir 'static'",
    "local:static": "parcel build --no-scope-hoist 'src/**/*.html'",
    "local:server": "parcel build 'server.ts' --dist-dir './'",
    "lint:eslint": "npx eslint '.'",
    "lint:stylelint": "npx stylelint '**/*.scss'",
    "lints:all": "yarn lint:eslint && yarn lint:stylelint",
    "test": "./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EugeneVeshchev/mf.messenger.praktikum.yandex.git"
  },
  "author": "Eugene Veshchev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EugeneVeshchev/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/EugeneVeshchev/mf.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@parcel/transformer-sass": "2.0.0-beta.2",
    "@types/chai": "^4.2.16",
    "@types/express": "^4.17.11",
    "@types/handlebars": "^4.1.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "express": "^4.17.1",
    "jsdom": "^16.5.3",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.3.2",
    "parcel": "^2.0.0-beta.2",
    "sinon": "^10.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  }
}
